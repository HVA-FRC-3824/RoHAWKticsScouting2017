<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="@dimen/activity_vertical_margin">

    <frc3824.rohawkticsscouting2017.Views.Steamworks.GearsInput
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/teleop_gears"
        app:key="teleop_gears"
        app:label="Gears" />

    <frc3824.rohawkticsscouting2017.Views.SavableCounter
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/teleop_gears_picked_up"
        app:key="teleop_picked_up_gears"
        app:label="Gears picked up"/>

    <frc3824.rohawkticsscouting2017.Views.SavableSpinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/teleop_shooting_location"
        app:key="teleop_shooting_location"
        app:label="Preferred Shooting Location"
        app:spinner_values="@array/shooting_location_options"/>

    <frc3824.rohawkticsscouting2017.Views.Steamworks.ShotInput
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/teleop_high_goal"
        app:key="teleop_high_goal"
        app:label="High Goal"/>

    <frc3824.rohawkticsscouting2017.Views.Steamworks.ShotInput
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/teleop_low_goal"
        app:key="teleop_low_goal"
        app:label="Low Goal"/>

    <frc3824.rohawkticsscouting2017.Views.SavableCounter
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/teleop_hoppers"
        app:key="teleop_hoppers"
        app:label="Hoppers"/>

</LinearLayout>